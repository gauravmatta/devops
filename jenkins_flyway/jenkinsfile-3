pipeline {
  agent any
  environment {
    DB_CREDS=credentials('db-creds')
  }
  stages {
    stage('Verify version') {
      steps {
         sh 'docker run --rm flyway/flyway:10.13.0 version'
         sh 'echo $WORKSPACE'
         sh 'pwd'
      }
    }
    stage('migrate') {
      steps {
        sh 'docker run --rm -v $WORKSPACE/sql:/jenkins_flyway/conf -v $WORKSPACE/jenkins_flyway/conf:/flyway/conf flyway/flyway:10.13.0 migrate'
      }
    }
    stage('validate') {
      steps {
        sh 'docker run --rm -v $WORKSPACE/sql:/jenkins_flyway/conf -v $WORKSPACE/jenkins_flyway/conf:/flyway/conf flyway/flyway:10.13.0 validate'
      }
    }
    stage('info') {
      steps {
        sh 'docker run --rm -v $WORKSPACE/sql:/jenkins_flyway/conf -v $WORKSPACE/conf:/jenkins_flyway/conf flyway/flyway:10.13.0 info'
      }
    }
  }
}